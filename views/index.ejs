<!DOCTYPE html>
<html>
  <%- include ("./parcial/head") %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include ("./parcial/nav") %>

    <!-- Header -->
    <%- include ("./parcial/header") %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <%- include ("./parcial/about") %>
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />
          <% menu.forEach( plato=> { %>
          <h4><a href="/detalle/<%= plato.id%>"><%= plato.titulo %></a></h4>
          <p class="ps-text-grey">
            <%= plato.descripcionCorta%> U$S <%= plato.precio %>
          </p>
          <br />
          <% })%>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include ("./parcial/footer") %>
    </div>
  </body>
</html>
